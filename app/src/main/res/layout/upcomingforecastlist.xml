<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center">


        <ImageView
            android:id="@+id/imageGraphic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/sunclear"/>

        <TextView
            android:id="@+id/weatherDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PlaceholderDesc"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/humidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="65%"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/windSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="55 km/h"/>
        <ImageView
            android:id="@+id/smallIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/moonclear"/>

        <TextView
            android:id="@+id/tempDisplayForecast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PlaceholderTemp"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/dayDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Placeholder date"
            android:layout_margin="10dp"/>

</androidx.appcompat.widget.LinearLayoutCompat>